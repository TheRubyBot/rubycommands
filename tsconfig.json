{
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"declaration": true,
		"sourceMap": true,
		"outDir": "./dist",
		"rootDir": "./src",
		"removeComments": false,
		
		"noImplicitAny": true,
		"strict": true,
		"strictNullChecks": true,
		"noImplicitThis": true,

		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true,
		"noImplicitReturns": true,

		"esModuleInterop": true
	}
}

